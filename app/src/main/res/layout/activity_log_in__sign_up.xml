<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LogIn_SignUp"
    android:background="@color/gray">

    <co.ceryle.segmentedbutton.SegmentedButtonGroup
        android:id="@+id/segmentBtn"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/gray"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/login_viewPager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sbg_animateSelector="overshoot"
        app:sbg_animateSelectorDuration="500"
        app:sbg_position="0"
        app:sbg_radius="5dp"
        app:sbg_ripple="true"
        app:sbg_rippleColor="@color/logo_color"
        app:sbg_selectorColor="@color/logo_color">

        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="140dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:sb_text="@string/logIn"
            app:sb_textColor="@color/White" />


        <co.ceryle.segmentedbutton.SegmentedButton
            android:layout_width="140dp"
            android:layout_height="53dp"
            android:layout_marginEnd="20dp"
            app:sb_text="@string/signUp"
            app:sb_textColor="@color/White" />


    </co.ceryle.segmentedbutton.SegmentedButtonGroup>

    <com.example.spacetablayout.CustomViewPager
        android:id="@+id/login_viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>